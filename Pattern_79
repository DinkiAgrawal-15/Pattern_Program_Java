import java.util.*;
class Main{
    public static void main(String a[]){
    
    
    int i,j,k;
    int d1=1;
    int n=4;
    int d2=(n*n)+1;
    for(i=n;i>=1;i--){
        for(k=1;k<=i;k++){
            System.out.printf("%2d",d2);
            d2++;
        }
        d2--;
        d2=d2-((i-1)*2);
        System.out.printf("\n");
    }
}
}

