import java.util.*;
public class Main{
    public static void main(String a[]){
    int n=5;
    int i,j,s;
    int x=1;
    for(i=0;i<n;i++){
        for(s=0;s<i;s++){
                    System.out.printf(" ");
        }
        for(j=n-1;j>=i;j--){
                        System.out.printf("%2d",x-i);
                        x++;

        }

            
        System.out.printf("\n");
    }
}}
