import java.util.*;
class Main{
    public static void main(String a[]){
    int n=5,x=2;
    int i,j;
    for(i=n;i>=1;i--)
    {
        for(j=1;j<=n;j++){
         if(i<=j){
            System.out.printf("%2d",x);
            x+=2;
         }
            else{
          System.out.printf(" ");
            }

        }
    System.out.printf("\n");
    }
}}
