import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    int i,j,n;
	    Scanner sc=new Scanner(System.in);
	    n=sc.nextInt();
	    for(i=1;i<=n;i++){
	        for(j=i;j<=n;j++){
	            if(i==1||j==i||j==n){
	                System.out.printf("*");
	                
	            }
	            else{
	                System.out.printf(" ");
	            }
	        }
	            	                System.out.printf("\n");

	        }
	    
	}
}
