import java.util.*;
class Main{
    public static void main(String a[]){
        
    
    int n=4;
    int i,j;
    int x=1;
    for(i=1;i<=n;i++){
        
        for(j=n;j>=1;j--){
            if(i>=j){
                System.out.printf("%2d",x*x);
                x++;
            }else{
                System.out.printf(" ");
            }
        
        }
        System.out.printf("\n");
    }
}
}
