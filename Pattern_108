import java.util.*;
class Main{
public static void main(String a[]){
    int n=5;
    int i,j,s;
    int x=1,y,t;
    for(i=n;i>=1;i--){
        y=i;
        t=x;
        for(s=1;s<i;s++){
                            System.out.printf(" ");

        }
        for(j=n;j>=i;j--){
                System.out.printf("%2d",t);
                t=t-y;
                y++;
                
            }
            x=x+i;
                System.out.printf("\n");
            }
        
    }

}
