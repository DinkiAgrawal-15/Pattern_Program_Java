import java.util.*;
public class Main{
    public static void main(String a[]){
    int n=4;
    int i,j,k;
    for(i=n;i>=0;i--){
        for(k=n-1;k>=i;k--){
                    System.out.printf(" ");
        }
        for(j=i;j>=0;j--){
                        System.out.printf("%2c",j+65);

        }


        System.out.printf("\n");
    }
}}
